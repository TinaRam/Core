@model Workflow.Models.Ptask

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ptask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskId" />
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control">
                    <option value="">Choose priority</option>
                    <option value="low">Low</option>
                    <option value="normal">Normal</option>
                    <option value="high">High</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskCreationDate" hidden class="control-label"></label>
                <input asp-for="TaskCreationDate" hidden class="form-control" />
                <span asp-validation-for="TaskCreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDeadline" class="control-label"></label>
                <input type="date" asp-for="TaskDeadline" class="form-control" />
                <span asp-validation-for="TaskDeadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionDate" hidden class="control-label"></label>
                <input asp-for="CompletionDate" hidden class="form-control" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskProjectId" hidden class="control-label"></label>
                <input asp-for="TaskProjectId" hidden value="ViewBag.project.id">
                
            </div>
            <div class="form-group">
                <label asp-for="TaskListId" class="control-label"></label>
                <select asp-for="TaskListId" class="form-control">
                    <option>Choose a task list</option>
                    @{
                        foreach (TaskList t in ViewBag.tasklist)
                        {
                            <option value="@t.TaskListId">@t.ListName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
