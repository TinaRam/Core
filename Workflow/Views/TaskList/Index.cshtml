@model IEnumerable<Workflow.Models.TaskList>

@{
    ViewData["Title"] = "Index";
}

<h1>Task lists</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaskListId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaskListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaskListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
