@model Workflow.Models.Project

@{
    ViewData["Title"] = "Edit";
    var project = ViewBag.project;
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectId" value="@project.ProjectId" />
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input type="text" asp-for="ProjectName" value="@project.ProjectName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectDescription" class="control-label"></label>
                <input type="text" asp-for="ProjectDescription" value="@project.ProjectDescription" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ProjectStart" type="hidden" value="@project.ProjectStart" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProjectDeadline" class="control-label"></label>
                <input type="text" asp-for="ProjectDeadline" 
                onclick="this.type='datetime-local'" onblur="this.type='text'" value="@project.ProjectDeadline" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="CompletionDate" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProjectManager" value="@project.ProjectManager" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MarkedAsFinished" value="@project.MarkedAsFinished" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
