@model Workflow.Models.Project

@{
    ViewData["Title"] = "Details";
    var project = ViewBag.project;
    var CurrentUser = ViewBag.CurrentUser;
    var Participants = ViewBag.Participants;
    var availableUsers = ViewBag.availableUsers;
    bool isManager = project.ProjectManager == CurrentUser.UserId;

    WorkflowContext context = ViewBag.context;
    var HttpContext = ViewBag.HttpContext;
}

<h3>@project.ProjectName</h3>
<p>@project.ProjectDescription</p>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Project manager
        </dt>
        <dd class="col-sm-10">
            @project.ProjectManagerNavigation.FirstName @project.ProjectManagerNavigation.LastName
        </dd>
        <dt class="col-sm-2">
            Deadline
        </dt>
        <dd class="col-sm-10">
            @project.ProjectDeadline
        </dd>
    </dl>
</div>

<hr />

<div class="row">
    <div class="col">
        <h5>Tasks</h5>
        <hr />
        @{
            foreach (TaskList tasklist in ViewBag.tasklist)
            {
                <div class="tasklist_view">
                    @{
                        foreach (Ptask task in tasklist.Ptask)
                        {
                            <div class="task_view">
                                <table class="">
                                    <tr>
                                        <th>@task.TaskName</th>
                                    </tr>
                                    <tr>
                                        <td>@task.Description</td>
                                    </tr>
                                    <tr>
                                        <th>Deadline</th>
                                        <td>@task.TaskDeadline</td>
                                    </tr>
                                    <tr>
                                        @{
                                            var myTask = false;
                                            foreach (AssignedTask assigned in task.AssignedTask)
                                            {
                                                <th>Assigned to</th>
                                                User user = context.User.Find(assigned.UserId);
                                                <td>@user.FirstName @user.LastName</td>
                                                if (user.UserId == CurrentUser.UserId)
                                                {
                                                    myTask = true;
                                                }
                                            }
                                        }
                                    </tr>
                                    <tr>
                                        @{
                                            if (task.CompletionDate != null)
                                            {
                                                if (isManager || myTask)
                                                {
                                                    <td>Finished - <a href="/Ptask/RemoveComplete/@task.TaskId">unfinish</a></td>
                                                }
                                                else
                                                {
                                                    <td>Finished</td>
                                                }
                                            }
                                            else if (isManager || myTask)
                                            {
                                                <td><a href="/Ptask/Complete/@task.TaskId">Finish</a></td>
                                            }
                                        }
                                    </tr>
                                </table>
                                <hr />
                            </div>
                        }
                    }

                </div>
            }
            if (isManager)
            {
                <p>
                    <a asp-controller="PTask" asp-action="Create">Create New</a>
                </p>
            }
        }


    </div>
    <div class="col-2">
        <h5>Participants</h5>
        <hr />
        <ul>
            @{
                foreach (ProjectParticipant p in Participants)
                {
                    <li>@p.User.FirstName @p.User.LastName</li>
                }
            }
        </ul>
    </div>
    @{
        if (isManager)
        {
            <div class="col-3">
                <h5>Available employees</h5>
                <hr />
                <ul>
                    @{
                        foreach (User user in availableUsers)
                        {
                            <li>@user.FirstName @user.LastName</li>
                        }
                    }
                </ul>
            </div>
        }
    }
</div>

<hr />
<div>
    @{
        if (isManager)
        {
            <a asp-action="Edit" asp-route-id="@project.ProjectId">Edit |</a>
        }
    }
    <a asp-action="Index">Back to List</a>
</div>
